@{
    Layout = null;
}
@model PokemonMVC.Models.PokemonDetailsModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@Model.Name</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body class="d-flex justify-content-center align-items-center vh-100 bg-dark text-white">
    <div class="card shadow-lg p-4 text-center bg-dark border-light" style="width: 22rem;">
        <h2 class="card-title text-capitalize text-white">@Model.Name</h2>
        <img src="@Model.Sprites.Front_Default" alt="@Model.Name" class="card-img-top rounded" width="150" />
        <div class="card-body">
            <p class="card-text text-white"><strong>Height:</strong> @Model.Height</p>
            <p class="card-text text-white"><strong>Weight:</strong> @Model.Weight</p>
            <a asp-action="Index" class="btn btn-primary mt-3">Back to List</a>
        </div>
    </div>
</body>
</html>

